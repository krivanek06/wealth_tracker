rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own document in the personal-accounts collection
    match /personal-accounts/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;

      // Specifically allow create if the document doesn't exist yet
      allow create: if request.auth.uid == userId && !exists(/databases/$(database)/documents/personal-accounts/$(userId));
    }

    // Deny access to everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
